<div class="col-md-4 col-md-offset-4">
  <div class="login-panel panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Please Sign Up</h3>
    </div>
    <div class="panel-body" id="login_div" ng-controller="personController">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <fieldset>
            <div class="form-group">
              <input class="form-control" ng-model="person.email" placeholder="email" name="user[email]" id="user_email" type="text" autofocus />
            </div>
            <div class="form-group">
              <input class="form-control" ng-model="person.username" placeholder="username" name="user[username]" id="user_username" type="text" autofocus />
            </div>
            <div class="form-group">
              <input class="form-control" ng-model="person.password" placeholder="password (8 characters minimum)" name="user[password]" id="user_password" type="password" autocomplete="off" />
            </div>
            <div class="form-group">
              <input class="form-control" ng-model="person.confirm_password" placeholder="Password confirmation" type="password" name="user[password_confirmation]" id="user_password_confirmation" autocomplete="off">
            </div>

            <button type="submit" class="btn btn-lg btn-success btn-block" ng-click="login_check()">login</button>

            <h6><%= flash[:warn] if flash[:warn] %></h6>
            <%= render "devise/shared/links" %>
          </fieldset>
      <% end %>
    </div>
  </div>
</div>
